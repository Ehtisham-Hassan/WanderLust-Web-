<%- layout('layouts/bp.ejs') %>

    <h3>All Listing</h3>
    <ol>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let list of allListing){  %>
        <a href="/listing/<%=list._id %>" class="listing-link">
            <div class="card col" >
                <img src="<%= list.image %>" class="card-img-top " alt="Listing_Image" style="height: 20rem;">
                <div class="card-img-overlay"></div>

                <div class="card-body">
                    <p class="card-text"> <b> <%= list.title %> </b> <br>
                       PKR <%= Number(list.price).toLocaleString("en-IN") %> / night
                    </p>
                </div>
            </div>
        </a>
        <%  }%>

</div>
    </ol>
