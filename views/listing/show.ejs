<%- layout('layouts/bp.ejs') %>

<body>
    <h3>my listing</h3>
    <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>PKR  <%= Number(listing.price).toLocaleString("en-IN") %>  </li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
